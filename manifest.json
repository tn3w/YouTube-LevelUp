{
    "manifest_version": 2,
    "name": "YouTube LevelUp",
    "version": "1.1.0",
    "description": "Blocks ads & Shorts, returns dislikes, skips sponsors, auto-continues watching",
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["storage", "webRequest", "webRequestBlocking", "<all_urls>"],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*", "*://*.youtube-nocookie.com/*"],
            "js": ["adblock.js"],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": ["*://*.youtube.com/*", "*://*.youtube-nocookie.com/*"],
            "js": ["content.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "youtube-levelup@tn3w",
            "strict_min_version": "58.0",
            "data_collection_permissions": {
                "required": ["none"],
                "collects_data": false
            }
        }
    }
}
