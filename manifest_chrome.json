{
    "manifest_version": 3,
    "name": "YouTube LevelUp",
    "version": "1.0.0",
    "description": "Blocks Shorts, returns dislikes, skips sponsors, and auto-continues watching",
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://returnyoutubedislikeapi.com/*",
        "https://sponsor.ajay.app/*"
    ],
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]
}
