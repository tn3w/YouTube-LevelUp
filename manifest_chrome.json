{
    "manifest_version": 3,
    "name": "YouTube LevelUp",
    "version": "1.1.0",
    "description": "Blocks ads & Shorts, returns dislikes, skips sponsors, auto-continues watching",
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["storage", "declarativeNetRequest"],
    "host_permissions": [
        "*://*.youtube.com/*",
        "*://*.youtube-nocookie.com/*",
        "*://*.googlevideo.com/*",
        "https://returnyoutubedislikeapi.com/*",
        "https://sponsor.ajay.app/*"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*", "*://*.youtube-nocookie.com/*"],
            "js": ["adblock.js"],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": ["*://*.youtube.com/*", "*://*.youtube-nocookie.com/*"],
            "js": ["content.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ]
}
